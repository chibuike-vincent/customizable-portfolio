<% title = 'Settings' %>

<div class="admin-form-container">
    <form action="/admin/settings" method="POST" class="admin-form">
        <div class="form-section">
            <h3>Site Settings</h3>
            <div class="form-group">
                <label for="siteTitle">Site Title *</label>
                <input type="text" id="siteTitle" name="siteTitle" value="<%= settings.siteTitle || '' %>" required>
            </div>
            <div class="form-group">
                <label for="siteDescription">Site Description *</label>
                <textarea id="siteDescription" name="siteDescription" rows="4" required><%= settings.siteDescription || '' %></textarea>
            </div>
            <div class="form-group">
                <label for="contactEmail">Contact Email</label>
                <input type="email" id="contactEmail" name="contactEmail" value="<%= settings.contactEmail || '' %>">
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Settings</button>
        </div>
    </form>
</div>

